{
    "name": "nebula-write-local",
    "productName": "NEBULA WRITE",
    "version": "0.2.3",
    "main": "electron/main.js",
    "type": "module",
    "description": "AI Novel Studio desktop app",
    "author": "DarkIceField",
    "scripts": {
        "dev": "concurrently -k \"vite\" \"wait-on tcp:5173 && electron . --remote-debugging-port=9222\"",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "backend:build": "python -m PyInstaller --noconfirm --clean --onefile --name backend --distpath backend/dist --workpath backend/build --specpath backend backend/main.py",
        "electron:build": "npm run backend:build && set CSC_IDENTITY_AUTO_DISCOVERY=false&& vite build && electron-builder"
    },
    "build": {
        "appId": "com.darkicefield.nebulawrite",
        "productName": "NEBULA WRITE",
        "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
        "directories": {
            "output": "dist"
        },
        "files": [
            "dist/**",
            "electron/**",
            "package.json"
        ],
        "extraResources": [
            {
                "from": "backend",
                "to": "backend",
                "filter": [
                    "**/*",
                    "!build/**",
                    "!dist/**",
                    "!__pycache__/**"
                ]
            }
        ],
        "asarUnpack": [
            "backend/**"
        ],
        "win": {
            "extraResources": [
                {
                    "from": "backend/dist/backend.exe",
                    "to": "backend/backend.exe"
                }
            ],
            "target": [
                "nsis"
            ]
        },
        "mac": {
            "extraResources": [
                {
                    "from": "backend/dist/backend",
                    "to": "backend/backend.exe"
                }
            ],
            "target": [
                "dmg",
                "zip"
            ],
            "category": "public.app-category.productivity"
        }
    },
    "dependencies": {
        "@google/genai": "^1.35.0",
        "electron-mcp-server": "^1.5.0",
        "lucide-react": "^0.562.0",
        "lucide-vue-next": "^0.563.0",
        "marked": "^12.0.0",
        "react": "^19.2.3",
        "react-dom": "^19.2.3",
        "vue": "^3.5.27"
    },
    "devDependencies": {
        "@tailwindcss/postcss": "^4.1.18",
        "@tailwindcss/typography": "^0.5.10",
        "@types/node": "^22.14.0",
        "@types/react": "^18.2.55",
        "@types/react-dom": "^18.2.19",
        "@vitejs/plugin-react": "^5.0.0",
        "@vitejs/plugin-vue": "^6.0.3",
        "@vue/tsconfig": "^0.8.1",
        "autoprefixer": "^10.4.23",
        "concurrently": "^8.2.2",
        "electron": "^28.2.0",
        "electron-builder": "^24.9.1",
        "postcss": "^8.5.6",
        "tailwindcss": "^4.1.18",
        "typescript": "~5.8.2",
        "vite": "^6.2.0",
        "wait-on": "^7.2.0"
    }
}