{
    "name": "nebula-write-local",
    "productName": "NEBULA WRITE",
    "version": "0.2.3",
    "main": "electron/main.js",
    "type": "module",
    "description": "AI Novel Studio desktop app",
    "author": "DarkIceField",
    "scripts": {
        "dev": "concurrently -k \"vite\" \"wait-on tcp:5173 && electron . --remote-debugging-port=9222\"",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "test": "npm run test:fast",
        "test:fast": "npm run test:unit && npm run test:component && npm run test:electron && npm run test:py",
        "test:unit": "vitest run -c vitest.unit.config.ts",
        "test:component": "vitest run -c vitest.component.config.ts",
        "test:electron": "vitest run -c vitest.electron.config.ts",
        "test:e2e:web": "npm run build && start-server-and-test \"npm run preview -- --host 127.0.0.1 --port 4173\" http-get://127.0.0.1:4173 \"playwright test --project=web-e2e\"",
        "test:e2e:electron": "npm run build && node e2e/electron/smoke.js",
        "test:py": "python -m pytest backend/tests -q -m \"not live\"",
        "test:live:providers": "python -m pytest backend/tests -q -m live",
        "test:coverage": "vitest run -c vitest.config.ts --coverage && python -m pytest backend/tests -q -m \"not live\" --cov=backend --cov-report=term-missing",
        "backend:build": "python -m PyInstaller --noconfirm --clean --onefile --name backend --distpath backend/dist --workpath backend/build --specpath backend backend/main.py",
        "electron:build": "npm run backend:build && set CSC_IDENTITY_AUTO_DISCOVERY=false&& vite build && electron-builder"
    },
    "build": {
        "appId": "com.darkicefield.nebulawrite",
        "productName": "NEBULA WRITE",
        "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
        "directories": {
            "output": "dist"
        },
        "files": [
            "dist/**",
            "electron/**",
            "package.json"
        ],
        "extraResources": [
            {
                "from": "backend",
                "to": "backend",
                "filter": [
                    "**/*",
                    "!build/**",
                    "!dist/**",
                    "!__pycache__/**"
                ]
            }
        ],
        "asarUnpack": [
            "backend/**"
        ],
        "win": {
            "extraResources": [
                {
                    "from": "backend/dist/backend.exe",
                    "to": "backend/backend.exe"
                }
            ],
            "target": [
                "nsis"
            ]
        },
        "mac": {
            "extraResources": [
                {
                    "from": "backend/dist/backend",
                    "to": "backend/backend.exe"
                }
            ],
            "target": [
                "dmg",
                "zip"
            ],
            "category": "public.app-category.productivity"
        }
    },
    "dependencies": {
        "@google/genai": "^1.35.0",
        "electron-mcp-server": "^1.5.0",
        "lucide-react": "^0.562.0",
        "lucide-vue-next": "^0.563.0",
        "marked": "^12.0.0",
        "react": "^19.2.3",
        "react-dom": "^19.2.3",
        "vue": "^3.5.27"
    },
    "devDependencies": {
        "@playwright/test": "^1.55.0",
        "@tailwindcss/postcss": "^4.1.18",
        "@tailwindcss/typography": "^0.5.10",
        "@testing-library/user-event": "^14.6.1",
        "@testing-library/vue": "^8.1.0",
        "@types/node": "^22.14.0",
        "@types/react": "^18.2.55",
        "@types/react-dom": "^18.2.19",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitejs/plugin-react": "^5.0.0",
        "@vitejs/plugin-vue": "^6.0.3",
        "@vue/test-utils": "^2.4.6",
        "@vue/tsconfig": "^0.8.1",
        "autoprefixer": "^10.4.23",
        "concurrently": "^8.2.2",
        "electron": "^28.2.0",
        "electron-builder": "^24.9.1",
        "jsdom": "^26.1.0",
        "playwright": "^1.55.0",
        "postcss": "^8.5.6",
        "start-server-and-test": "^2.0.8",
        "tailwindcss": "^4.1.18",
        "typescript": "~5.8.2",
        "vite": "^6.2.0",
        "vitest": "^3.2.4",
        "wait-on": "^7.2.0"
    }
}
